<div class="container">
  
  <div class="row d-flex justify-content-center">
    <div class="col-10">
      <% if @user.errors.any? %>
      <h2>The following errors prevented the user from being saved:</h2>
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with(model: @user, local: true, class:"shadow p-3 mb-3 bg-info rounded") do |f|%>
        <div class="form-group row mt-4">
            <%= f.label :username, class:"col-2 col-form-label text-light" %>
            <div class="col-10">
              <%= f.text_field :username, class:"form-control shadow rounded", placeholder: "Username" %>
            </div>
          </div>

        <div class="form-group row mt-4">
            <%= f.label :password, class:"col-2 col-form-label text-light" %>
            <div class="col-10">
              <%= f.password_field :password, class:"form-control shadow rounded", placeholder: "Password" %>
            </div>
          </div>

      
          <div class="form-group row mt-4">
            <%= f.submit("Sign Up", class:"btn btn-outline-light btn-lg") %>
          </div>
        </div>
      
      <% end %>
    </div>
  
  
</div>